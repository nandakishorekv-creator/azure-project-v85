            example: !include resources/examples/GetOpportunityIdResponse.json
  put:
    description: "Update an existing opportunity"
    displayName: "Update Opportunity"
    body:
      application/json:
        type: !include resources/schemas/PutOpportunityIdRequest.raml
        example: !include resources/examples/PutOpportunityIdRequest.json
    responses:
      200:
        body:
          application/json:
            type: !include resources/schemas/PutOpportunityIdResponse.raml
            example: !include resources/examples/PutOpportunityIdResponse.json
  delete:
    description: "Delete a specific opportunity"
