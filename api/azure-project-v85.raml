#%RAML 1.0
title: azure-project-v85
version: v1
baseUri: https://azure-project-v85.example.com/{version}
mediaType: application/json

/leads:
  post:
    description: "Create a new leads"
    displayName: "Create Leads"
    body:
      application/json:
        type: !include resources/schemas/PostLeadsRequest.raml
        example: !include resources/examples/PostLeadsRequest.json
    responses:
      200:
        body:
          application/json:
            type: !include resources/schemas/PostLeadsResponse.raml
            example: !include resources/examples/PostLeadsResponse.json

/lead/{id}:
  uriParameters:
    id:
      type: integer
      required: true
  get:
    description: "Retrieve a specific lead by ID"
    displayName: "Get Lead"
    responses:
      200:
        body:
          application/json:
            type: !include resources/schemas/GetLeadIdResponse.raml
            example: !include resources/examples/GetLeadIdResponse.json
  put:
    description: "Update an existing lead"
    displayName: "Update Lead"
    body:
      application/json:
        type: !include resources/schemas/PutLeadIdRequest.raml
        example: !include resources/examples/PutLeadIdRequest.json
    responses:
      200:
        body:
          application/json:
            type: !include resources/schemas/PutLeadIdResponse.raml
            example: !include resources/examples/PutLeadIdResponse.json
  delete:
    description: "Delete a specific lead"
    displayName: "Delete Lead"
    responses:
      200:
        body:
          application/json:
            type: !include resources/schemas/DeleteLeadIdResponse.raml
            example: !include resources/examples/DeleteLeadIdResponse.json

/opportunities:
  post:
    description: "Create a new opportunities"
